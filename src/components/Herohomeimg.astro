---
import { Image } from "astro:assets";
import { getImage } from "astro:assets";
import Logolimone from "../assets/logolimone.png"
import myBackground from "../assets/DSC_4235.jpg"
const optimizedBackground = await getImage({src: myBackground, format: 'webp'});
---

<!-- Background image -->
<div

  class=" h-screen bg-cover bg-no-repeat content-center"
  style={`background-image: url(${optimizedBackground.src});`}>
  <div class=" grid max-w-screen-xl md:px-5 py-8 m-4 lg:mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12 bg-white bg-opacity-60 rounded-xl sm:px-5">
    <div class="mr-auto place-self-center lg:col-span-7">
        <h1 class="max-w-2xl px-5 mb-4 text-4xl font-pd font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl text-primary-700 dark:text-white">Il Giardino dei Limoni B&B</h1>
        <p class="max-w-2xl mb-6 px-5 text-green-700 font-extrabold lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400 font-pd">Ospitalità a Suvereto nella Costa degli Etruschi</p>
        <a href="/ospitalità" class="inline-flex items-center justify-center m-5 px-5 py-3 mr-3 text-base font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-900">
            Scopri il nostro B&B
            <svg class="w-5 h-5 ml-2 mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </a>
       
    </div>
    <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
        <Image src={Logolimone} alt="Logo Il Giardino dei Limoni">
    </div>                
</div>
</div>
<!-- Background image -->

<style>
.font-pd {
    font-family: 'Playfair Display Variable', serif;
  }

</style>
